@model ChangePasswordViewModel
@using Cartridges.Web.Models.AccountModels
@using Cartridges.Web.Models.ViewModel
@{ ViewBag.Title = "Изменение пароля"; }

<form asp-action="ChangePassword" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Изменение пароля для пользователя " + Model.UserName })
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserName" />
                <div class="form-group">
                    <span asp-validation-for="Password"></span><br />
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>
