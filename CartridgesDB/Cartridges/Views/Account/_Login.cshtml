@model Cartridges.Web.Models.AccountModels.LoginViewModel
@using Cartridges.Web.Models.ViewModel
@using Cartridges.Web.Models

<form asp-action="Login" asp-controller="Account" role="form" class="login-form" id="login-form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Авторизация" })
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="UserName" class="login-form__label"></label>
                    <input asp-for="UserName" type="text" class="login-form__input">
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="login-form__label"></label>
                    <input asp-for="Password" type="password" class="login-form__input">
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>