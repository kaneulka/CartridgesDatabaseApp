@model RequestViewModel
@using Cartridges.Web.Models.ViewModel
@using Cartridges.Web.Models

<form asp-action="AddRequest" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Создать служебку" })
    <div class="modal-body">
        <div class="row">
            <div class="col-12">

                <h3>Выбрать отдел</h3>
                <span asp-validation-for="DepartmentId"></span><br />
                <select class="form-control" asp-for="DepartmentId">
                    <option value="0">-- Выберите отдел --</option>
                    @foreach (var c in Model.Departments)
                    {
            <option value="@c.Id">@c.Name</option>}
                </select>

                <h3>Выбрать сооружение</h3>
                <span asp-validation-for="BuildingId"></span><br />
                <select class="form-control" asp-for="BuildingId">
                    <option value="0">-- Выберите сооружение --</option>
                    @foreach (var c in Model.Buildings)
                    {
            <option value="@c.Id">@c.Name</option>}
                </select>

                <div class="form-group">
                    <span asp-validation-for="Room"></span><br />
                    <label asp-for="Room"></label>
                    <input asp-for="Room" class="form-control" />
                </div>

                <div class="form-group">
                    <span asp-validation-for="InventoryNumber"></span><br />
                    <label asp-for="InventoryNumber"></label>
                    <input asp-for="InventoryNumber" class="form-control" />
                </div>

                <h3>Выбрать принтер</h3>
                <span asp-validation-for="PrinterModelId"></span><br />
                <select class="form-control" asp-for="PrinterModelId" id="printer-list">
                    <option id="printerModelId" value="0">-- Выберите принтер --</option>
                    @foreach (var c in Model.Printers)
                    {
            <option id="printerModelId" value="@c.Id">@c.PrinterCompany.Name @c.Name</option>}
                </select>


                <div class="form-group">
                    <label>Значение свойства</label>
                    <span asp-validation-for="CartridgeModelId"></span><br />
                    <select class="form-control" id="cartidge-values-list" asp-for="CartridgeModelId">
                        <option value="-1">-- Выберите картридж --</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>

